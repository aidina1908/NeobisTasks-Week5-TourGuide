<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/item_image"
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/placeholder"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:tint="@color/icon"
                android:src="@drawable/placeholder"/>

            <TextView
                android:id="@+id/item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/placeholder"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/item_location"
                android:tint="@color/icon"
                android:src="@drawable/info"/>

            <TextView
                android:id="@+id/item_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_location"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/info"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/item_overview"
                android:tint="@color/icon"
                android:src="@drawable/phone"/>

            <TextView
                android:id="@+id/item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_below="@+id/item_overview"
                android:layout_toRightOf="@id/phone"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:onClick="btn"/>

            <ImageView
                android:id="@+id/web"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/phone"
                android:layout_marginBottom="16dp"
                android:tint="@color/icon"
                android:src="@drawable/world"/>

            <TextView
                android:id="@+id/item_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_below="@id/item_number"
                android:layout_toRightOf="@+id/web"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"/>

            </RelativeLayout>
        </LinearLayout>

</ScrollView>